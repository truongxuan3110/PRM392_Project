<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >


        <ImageView
            android:id="@+id/item_payment_image"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cho_to_xin_mot_ve_di_tuoi_tho" />

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_payment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/item_payment_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Giá sản phẩm: 15000"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/item_payment_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x Số lượng"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/item_payment_Total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền x sản phẩm"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.OrderedHistoryActivity">

    <include
        layout="@layout/toolbar" />


    <LinearLayout
        android:id="@+id/filter_and_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/leftfilter"
            android:layout_marginLeft="30dp"
            >
            <TextView
                android:id="@+id/filterbystatus"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Filter by status"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/filter_ordered_history_status"
                android:layout_width="150dp"
                android:layout_height="50dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            >
            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Sort"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sort_by_date"
                android:layout_width="150dp"
                android:layout_height="50dp"
                />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ordered_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp" />
</LinearLayout>
